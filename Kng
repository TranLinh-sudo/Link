--[[
    üíé AUTO CHEST V2 - GUI CONTROL
    Ch·ª©c nƒÉng: C√≥ n√∫t B·∫≠t/T·∫Øt tr√™n m√†n h√¨nh, t√¨m r∆∞∆°ng g·∫ßn nh·∫•t, bay m∆∞·ª£t.
]]

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Workspace = game:GetService("Workspace")

local LocalPlayer = Players.LocalPlayer
local CurrentTween = nil -- Bi·∫øn ƒë·ªÉ l∆∞u tween ƒëang ch·∫°y (ƒë·ªÉ h·ªßy khi t·∫Øt)

getgenv().Config = {
    AutoChest = false,
    TweenSpeed = 300
}

-- // 1. T·∫†O GIAO DI·ªÜN (GUI) //
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local ToggleBtn = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

-- T√¨m n∆°i g·∫Øn GUI an to√†n
if gethui then ScreenGui.Parent = gethui() else ScreenGui.Parent = CoreGui end
ScreenGui.Name = "AutoChestGUI"

-- Khung ch√≠nh
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Position = UDim2.new(0.1, 0, 0.3, 0)
Frame.Size = UDim2.new(0, 200, 0, 120)
Frame.Active = true
Frame.Draggable = true -- Cho ph√©p k√©o th·∫£

-- Ti√™u ƒë·ªÅ
Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "AUTO CHEST"
Title.TextColor3 = Color3.new(1,1,1)
Title.TextSize = 18

-- N√∫t B·∫≠t/T·∫Øt
ToggleBtn.Parent = Frame
ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50) -- M√†u ƒë·ªè (T·∫Øt)
ToggleBtn.Position = UDim2.new(0.1, 0, 0.4, 0)
ToggleBtn.Size = UDim2.new(0.8, 0, 0.4, 0)
ToggleBtn.Font = Enum.Font.SourceSansBold
ToggleBtn.Text = "TR·∫†NG TH√ÅI: T·∫ÆT üî¥"
ToggleBtn.TextColor3 = Color3.new(1,1,1)
ToggleBtn.TextSize = 16

local btnCorner = Instance.new("UICorner", ToggleBtn)
btnCorner.CornerRadius = UDim.new(0, 8)

-- // 2. LOGIC X·ª¨ L√ù N√öT B·∫§M //
ToggleBtn.MouseButton1Click:Connect(function()
    getgenv().Config.AutoChest = not getgenv().Config.AutoChest
    
    if getgenv().Config.AutoChest then
        ToggleBtn.Text = "TR·∫†NG TH√ÅI: B·∫¨T üü¢"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100) -- Xanh l√°
    else
        ToggleBtn.Text = "TR·∫†NG TH√ÅI: T·∫ÆT üî¥"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50) -- ƒê·ªè
        
        -- D·ª´ng ngay l·∫≠p t·ª©c khi t·∫Øt
        if CurrentTween then CurrentTween:Cancel() end
    end
end)

-- // 3. H√ÄM BAY (TWEEN) //
local function Tween(targetCFrame)
    if not LocalPlayer.Character then return end
    local HRP = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not HRP then return end

    local Distance = (HRP.Position - targetCFrame.Position).Magnitude
    local Time = Distance / getgenv().Config.TweenSpeed
    
    local Info = TweenInfo.new(Time, Enum.EasingStyle.Linear)
    CurrentTween = TweenService:Create(HRP, Info, {CFrame = targetCFrame})
    
    CurrentTween:Play()
    
    -- Noclip (ƒêi xuy√™n t∆∞·ªùng) khi ƒëang bay
    local Noclip
    Noclip = RunService.Stepped:Connect(function()
        if not getgenv().Config.AutoChest then 
            if CurrentTween then CurrentTween:Cancel() end
            Noclip:Disconnect()
            return
        end
        
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.CanCollide = false end
        end
    end)
    
    CurrentTween.Completed:Wait()
    Noclip:Disconnect()
end

-- // 4. H√ÄM T√åM R∆Ø∆†NG //
local function GetChest()
    local list = {}
    for _, v in pairs(Workspace:GetDescendants()) do
        if v.Name:find("Chest") and v:IsA("Part") and v:FindFirstChild("TouchInterest") then
            table.insert(list, v)
        end
    end
    
    -- T√¨m c√°i g·∫ßn nh·∫•t
    local nearest = nil
    local minDst = math.huge
    local myPos = LocalPlayer.Character.HumanoidRootPart.Position
    
    for _, chest in pairs(list) do
        local dst = (chest.Position - myPos).Magnitude
        if dst < minDst then
            minDst = dst
            nearest = chest
        end
    end
    return nearest
end

-- // 5. V√íNG L·∫∂P CH√çNH //
task.spawn(function()
    while task.wait() do
        if getgenv().Config.AutoChest then
            pcall(function()
                local Chest = GetChest()
                if Chest then
                    Tween(Chest.CFrame)
                else
                    -- H·∫øt r∆∞∆°ng th√¨ ƒë·ª£i ch√∫t ho·∫∑c ƒë·ªïi server
                    -- (B·∫°n c√≥ th·ªÉ th√™m code Hop Server v√†o ƒë√¢y)
                end
            end)
        end
    end
end)
